{
  "editor.tabSize": 2,
  "files.watcherExclude": {
    ".git/objects/**": true,
    "dist/**": true,
    "node_modules/**": true
  },
  "files.trimTrailingWhitespace": true,
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true
  },
  "nodeTdd.buildOnActivation": true,
  "nodeTdd.buildOnCreate": true,
  "nodeTdd.buildOnDelete": true,
  "nodeTdd.minimal": true,
  "nodeTdd.reporter": "tap",
  "nodeTdd.testScript": "test",
  "nodeTdd.glob": "{src,test}/**/*.{mjs}"
}
